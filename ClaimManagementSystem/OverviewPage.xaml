<Page x:Class="ClaimManagementSystem.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Overview" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Welcome Message -->
            <Border Background="#3498db" Padding="20" CornerRadius="5" Margin="0,0,0,20">
                <TextBlock x:Name="txtWelcome" Foreground="White" FontSize="16"/>
            </Border>

            <!-- Stats Cards -->
            <WrapPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" 
                        Width="200" Height="120" Margin="0,0,20,20" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Total Claims" Foreground="#666" FontSize="12"/>
                        <TextBlock x:Name="txtTotalClaims" Text="45" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="All time claims" Foreground="#666" FontSize="11"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" 
                        Width="200" Height="120" Margin="0,0,20,20" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Pending" Foreground="#666" FontSize="12"/>
                        <TextBlock x:Name="txtPending" Text="8" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Awaiting review" Foreground="#666" FontSize="11"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" 
                        Width="200" Height="120" Margin="0,0,20,20" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Approved" Foreground="#666" FontSize="12"/>
                        <TextBlock x:Name="txtApproved" Text="8" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Successfully approved" Foreground="#666" FontSize="11"/>
                    </StackPanel>
                </Border>

                <Border Background="White" BorderBrush="#ddd" BorderThickness="1" 
                        Width="200" Height="120" Margin="0,0,20,20" Padding="15" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Total Amount" Foreground="#666" FontSize="12"/>
                        <TextBlock x:Name="txtTotalAmount" Text="R125,000" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Processed" Foreground="#666" FontSize="11"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Quick Actions -->
            <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <WrapPanel>
                <Button Content="Submit New Claim" Click="BtnNewClaim_Click" 
                        Background="#27ae60" Foreground="White" FontWeight="Bold"
                        Padding="20,10" Margin="0,0,10,10"/>
                <Button Content="View My Claims" Click="BtnViewClaims_Click" 
                        Background="#3498db" Foreground="White" FontWeight="Bold"
                        Padding="20,10" Margin="0,0,10,10"/>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>