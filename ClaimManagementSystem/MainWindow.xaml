<Window x:Class="ClaimManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claim Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Claim Management System" 
                          Foreground="White" FontSize="20" FontWeight="Bold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnOverview" Content="Overview" Click="NavigateToOverview" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="btnSubmitClaim" Content="Submit Claim" Click="NavigateToSubmitClaim" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="btnMyClaims" Content="My Claims" Click="NavigateToMyClaims" 
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="btnManageClaims" Content="Manage Claims" Click="BtnManageClaims_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                    <Button x:Name="btnHRManagement" Content="HR Management" Click="BtnHRManagement_Click"
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="txtWelcome" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button x:Name="btnLogout" Content="Logout" Click="BtnLogout_Click" 
                            Background="#e74c3c" Foreground="White" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>